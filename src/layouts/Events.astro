---
import TimeLine from "../components/TimeLine.astro";
---

    <div class="events-bg">
  <TimeLine />
</div>

<style>
  .events-bg {
    min-height: 100vh;
    width: 100%;
    background: rgba(26,26,46,0.7);
    backdrop-filter: blur(24px) saturate(120%);
    position: relative;
    overflow: hidden;
  }
  /* Aurora/Glassmorphism background shapes */
  .events-bg::before {
    content: '';
    position: absolute;
    top: 10%;
    left: 5%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #00d4ff55 0%, transparent 70%);
    filter: blur(60px);
    z-index: 0;
  }
  .events-bg::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #8b5cf655 0%, transparent 70%);
    filter: blur(50px);
    z-index: 0;
  }
</style>
