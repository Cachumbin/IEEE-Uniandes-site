---
type TimelineEvent = {
  title: string;
  date: string;
  hour: string;
  location: string;
  type: string;
  event: string;
  chapters: Array<string>;
  link: string;
  description: string;
  objetivos: string;
  asistentes: number;
  resultadoClave: string;
  orador: string;
