---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.tsx";
import ChapterContacts from "../components/ChapterContacts.tsx"; // Import the new component
import { Mail, MapPin, Users, Linkedin, Instagram, Globe } from "lucide-astro";
---

<Layout title="Contact Us - IEEE Student Branch">
  <Navigation />

  <main class="pt-16 bg-ieee-dark-bg">
    <!-- Aurora Glassmorphism Hero -->
    <section
      class="relative py-24 flex items-center justify-center min-h-[80vh] overflow-hidden"
    >
      <div class="absolute top-0 left-0 w-full h-full pointer-events-none z-0">
        <div
          class="absolute left-10 top-10 w-96 h-96 bg-gradient-to-br from-neon-blue/40 to-neon-purple/20 rounded-full blur-3xl animate-float"
        >
        </div>
        <div
          class="absolute right-20 bottom-0 w-72 h-72 bg-gradient-to-tr from-ieee-gold/30 to-neon-green/20 rounded-full blur-2xl animate-blur-pulse"
        >
        </div>
      </div>
      <div class="relative z-10 max-w-5xl w-full mx-auto px-6">
        <div class="glass-card p-10 rounded-3xl">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Info Section -->
            <div>
              <h1
                class="font-display text-4xl sm:text-5xl font-bold text-left text-white mb-6 tracking-tight"
              >
                IEEE Student Branch <br /><span
                  class="text-transparent bg-clip-text bg-gradient-to-r from-neon-blue via-neon-purple to-neon-pink"
                  >Uniandes</span
                >
              </h1>
              <p class="text-lg text-ieee-dark-muted mb-6 leading-relaxed">
                <span class="font-bold text-white">Presidente:</span>
                <a
                  href="mailto:mp.alarcon@uniandes.edu.co"
                  class="text-neon-blue hover:underline"
                  >mp.alarcon@uniandes.edu.co</a
                ><br />
                <span class="font-bold text-white">Secretario:</span>
                <a
                  href="mailto:f.gutierreza@uniandes.edu.co"
                  class="text-neon-purple hover:underline"
                  >f.gutierreza@uniandes.edu.co</a
                ><br />
                <span class="font-bold text-white">Secretaria:</span>
                <a
                  href="mailto:m.lassop@uniandes.edu.co"
                  class="text-neon-pink hover:underline"
                  >m.lassop@uniandes.edu.co</a
                ><br />
                <span class="font-bold text-white">Tesorero:</span>
                <a
                  href="mailto:ji.cubillos@unaindes.edu.co"
                  class="text-ieee-gold hover:underline"
                  >ji.cubillos@unaindes.edu.co</a
                >
              </p>
              <ul class="space-y-4 mb-8">
                <li class="flex items-center gap-3">
                  <Mail class="text-neon-blue" size={22} /><span
                    class="text-white font-medium">ieee@uniandes.edu.co</span>
                </li>
                <li class="flex items-center gap-3">
                  <MapPin class="text-neon-green" size={22} /><span
                    class="text-white font-medium">Cra 1 #18A-12, Bogotá</span>
                </li>
                <li class="flex items-center gap-3">
                  <Users class="text-ieee-gold" size={22} /><span
                    class="text-white font-medium">+130 miembros activos</span>
                </li>
              </ul>
              <div class="flex gap-5 mt-2">
                <a
                  href="https://www.linkedin.com/company/rama-ieee-universida-de-los-andes/"
                  target="_blank"
                  rel="noopener"
                  class="hover:scale-110 transition"
                  ><Linkedin class="text-neon-blue" size={28} /></a
                >
                <a
                  href="https://www.instagram.com/ieeeuniandes/"
                  target="_blank"
                  rel="noopener"
                  class="hover:scale-110 transition"
                  ><Instagram class="text-neon-purple" size={28} /></a
                >
                <a
                  href="https://linktr.ee/ieeeuniandes1?fbclid=PAZXh0bgNhZW0CMTEAAaftikjBgsCoHBd7sBlL2-nU4fCbEzB-GiP5H3MpYGFUvfjjOBXTAQFpMqOsjQ_aem_6vecMWQ1VoUns4X6D16Fuw"
                  target="_blank"
                  rel="noopener"
                  class="hover:scale-110 transition"
                  ><Globe class="text-neon-green" size={28} /></a
                >
              </div>
            </div>
            <!-- Contact Form Section -->
            <div>
              <h2 class="text-2xl font-bold text-white mb-4">Contáctanos</h2>
              <ContactForm client:load />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Dynamic Chapter Contacts Section -->
    <ChapterContacts client:visible />
  </main>
  <Footer />
</Layout>

<style is:global>
  .bg-ieee-dark-bg {
    background: #0a0a0f;
  }
  .glass-card {
    background: rgba(26, 26, 46, 0.7);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    border-radius: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    backdrop-filter: blur(24px) saturate(120%);
  }
  .input-glass {
    width: 100%;
    padding: 0.75rem 1.25rem;
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.18);
    background: rgba(255, 255, 255, 0.08);
    color: #fff;
    font-size: 1rem;
    outline: none;
    transition:
      border 0.2s,
      box-shadow 0.2s;
    box-shadow: 0 2px 8px 0 rgba(31, 38, 135, 0.15);
  }
  .input-glass:focus {
    border-color: #00d4ff;
    box-shadow: 0 0 0 2px #00d4ff44;
  }
  .text-ieee-dark-muted {
    color: #b3b3c6;
  }
</style>
