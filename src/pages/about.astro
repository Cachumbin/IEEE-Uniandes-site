<style>
  .value-card {
    @apply bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1;
  }
  
  .value-icon {
    @apply w-12 h-12 rounded-lg flex items-center justify-center text-white mb-4;
  }
  
  .timeline-item {
    @apply relative flex items-start space-x-4 pb-8;
  }
  
  .timeline-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 0.75rem;
    top: 3rem;
    bottom: -2rem;
    width: 2px;
    background: linear-gradient(to bottom, #e5e7eb, transparent);
  }
  
  .timeline-marker {
    @apply w-6 h-6 rounded-full border-4 border-white shadow-lg flex-shrink-0 mt-1;
  }
  
  .timeline-content {
    @apply bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex-1;
  }
</style>